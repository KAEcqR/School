@page
@model MyApp.Namespace.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <div><a asp-page="Page2" >Strona Druga</a></div>
    <div class="container">
        <h1>Strona Index</h1>
        
        <select name="kolory">
            @foreach(var c in Model.Colors){
                <option>@c</option>
            }
        </select>
        <h4 class="bg-light">@ViewData["info"]</h4>

        <form>
            <input type="text" placeholder="podaj imie: " name="firstname"/><br>
            <input type="text" placeholder="podaj nazwisko: " name="lastname"/><br>
            <input type="number" placeholder="podaj wiek: " name="age"/><br>
            <input type="submit" value="Zapisz" name="submit">
        </form>

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Informacje zwrotne</h5>
                <p class="card-text">
                    @ViewData["result"]
                </p>
            </div>
        </div>
    </div>
</body>
</html>